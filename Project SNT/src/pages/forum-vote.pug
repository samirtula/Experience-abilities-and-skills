                form.vote
                    label.radio-other
                        input(type="radio" value="yes" id ='yes')
                        span.radio-other__text Согласен
                    label.radio-other
                        input(type="radio" value="no" id='no')
                        span.radio-other__text Не согласен
                    label.radio-other
                        input(type="radio" value="doubt" id='doubt')
                        span.radio-other__text Затрудняюсь ответить
                    input(type="submit" value="Проголосовать")
                    input(type="submit" value="Показать результаты")
                .forum-discuss__results
                    span 75% Cогласен
                    span 75% Не согласен
                    span 75% Затрудняюсь ответить
